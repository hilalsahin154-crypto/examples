@using MVC_Petshop.Models

@model (List<Category> Categories, List<Product> Products)

<div style="background-color:#E6A9EC;">
    <div class="container">
        <ul class="nav justify-content-center py-1">
            @{
                var mainCategories = Model.Categories?
                .Where(c => string.IsNullOrEmpty(c.ParentId))
                .ToList() ?? new List<Category>();
            }

            @foreach (var category in mainCategories)
            {
                <li class="nav-item mx-5">
                    <a class="nav-link text-white fw-semibold"
                       href="#"
                       style="font-size:16px; padding:4px 0; letter-spacing:1.5px;">
                        @category.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div>

@{
    var products = Model.Products ?? new List<Product>();
}

<div class="container mt-4">
    <div class="row">
        @foreach (var item in products)
        {         
            var img = item.ProductImages?.FirstOrDefault(x => x.IsCurrent && x.IsActive);

            <div class="col-md-3 mb-4">
                <a asp-controller="Home"
                   asp-action="Detail"
                   asp-route-id="@item.Id"
                   class="text-decoration-none text-dark">

                    <div class="card product-card h-100">
                        <div id="p-@item.Id" class="carousel slide" style="background-color: #f8f9fa;">
                            <div class="carousel-inner">
                                @if (item.ProductImages != null && item.ProductImages.Any())
                                {
                                    var images = item.ProductImages.ToList();
                                    for (int i = 0; i < images.Count; i++)
                                    {
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <div class="d-flex align-items-center justify-content-center" style="height:220px;">
                                                <img src="@images[i].ImageUrl"
                                                     class="d-block"
                                                     style="max-height: 100%; max-width: 100%; width: auto; object-fit: contain;">
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
 
                            @if (item.ProductImages?.Count > 1)
                            {
                                <button class="carousel-control-prev" data-bs-target="#p-@item.Id" data-bs-slide="prev"><span class="carousel-control-prev-icon bg-secondary rounded-circle"></span></button>
                                <button class="carousel-control-next" data-bs-target="#p-@item.Id" data-bs-slide="next"><span class="carousel-control-next-icon bg-secondary rounded-circle"></span></button>
                            }
                        </div>

                        <div class="card-body">

                            <h6 class="product-title">
                                @item.Name
                            </h6>

                            <p class="small text-muted">
                                @item.ShortDescription
                            </p>

                            <div class="price fw-bold">
                                @item.Price.ToString() ₺
                            </div>

                            <button class="btn btn-lila btn-sm w-100 d-flex align-items-center justify-content-center gap-2"
                                    onclick="addToCart(@item.Id)">
                                <i class="bi bi-cart-plus"></i> Sepete Ekle
                            </button>
                        </div>

                    </div>
                </a>
            </div>
        }
    </div>
</div>
<style>
    .btn-lila {
        background-color: #b57edc !important;
        color: #fff !important;
        border: none !important;
    }

        .btn-lila:hover {
            background-color: #9f6cc7 !important;
            color: #fff !important;
        }

        .btn-lila:active {
            background-color: #8b5fbf !important;
        }
</style>